import random
caratteri_minuscole = "abcdefghilmnopqrstuvz"
caratteri_maiuscoli = " ABCDEFGHILMNOPQRSTUVZ"
caratteri_speciali = " -/()â‚¬&@!?[]{}#%^_\|~<>$"
numeri = "1234567890"

use_for = caratteri_minuscole + caratteri_maiuscoli + numeri + caratteri_speciali

lenght_for_pass = 14

password = "".join(random.sample(use_for,lenght_for_pass))
print("Password",password)

